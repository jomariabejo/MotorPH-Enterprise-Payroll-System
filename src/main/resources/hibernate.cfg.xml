<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/payroll_system</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">admin</property>

        <!-- Echo all executed SQL to console -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.enable_lazy_load_no_trans">true</property>

        <!-- Schema management (dev-friendly):
             'update' allows the app to start even if the DB schema is missing columns.
             Note: this projectâ€™s entity mappings match the schema in `src/main/resources/data-old.sql`
             (database name `payroll_system`). If you point to a different schema (e.g. `payroll_sys`
             from `src/main/resources/data.sql`), schema updates/foreign keys will fail. -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <mapping class="com.jomariabejo.motorph.model.Announcement"/>
        <mapping class="com.jomariabejo.motorph.model.Bonus"/>
        <mapping class="com.jomariabejo.motorph.model.Conversation"/>
