            </TextField>
            <HBox alignment="CENTER_RIGHT" spacing="9.6">
               <children>
                  <Button mnemonicParsing="false" onAction="#cancelButtonClicked" stylesheets="@../../../../css/custom/button-small.css" text="Cancel" />
                  <Button mnemonicParsing="false" onAction="#confirmButtonClicked" stylesheets="@../../../../css/custom/button-small.css" text="Submit" />
               </children>
               <VBox.margin>
                  <Insets left="50.0" right="50.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
